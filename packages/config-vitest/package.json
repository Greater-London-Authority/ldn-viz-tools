{
	"name": "@ldn-viz/config-vitest",
	"version": "0.1.0",
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./base": "./dist/configs/base-config.js",
		"./sveltekit": "./dist/configs/sveltekit-config.js"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"collect-json-reports": "node dist/scripts/collect-json-reports.js",
		"dev": "tsc --watch",
		"merge-json-reports": "node dist/scripts/merge-json-reports.js",
		"report": "nyc report -t coverage/merged --report-dir coverage/report --reporter=html --exclude-after-remap false",
		"view-report": "open coverage/report/index.html"
	},
	"dependencies": {
		"vitest": "^4.0.16"
	},
	"devDependencies": {
		"@ldn-viz/config-typescript": "*",
		"@vitest/coverage-v8": "^4.0.16",
		"@vitest/ui": "^4.0.16",
		"glob": "^11.0.1",
		"jsdom": "^26.0.0",
		"nyc": "^17.1.0",
		"typescript": "latest"
	}
}
