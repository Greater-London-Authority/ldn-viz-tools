{
	"name": "@ldn-viz/tables",
	"version": "5.0.0-svelte5.1",
	"keywords": [
		"svelte"
	],
	"license": "MIT",
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"build": "vite build && npm run prepack",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview",
		"test": "npm run test:unit && npm run test:e2e",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:unit": "vitest run"
	},
	"dependencies": {
		"@ldn-viz/charts": "7.0.0-svelte5.1",
		"@ldn-viz/themes": "*",
		"@ldn-viz/ui": "21.0.0-svelte5.1",
		"@ldn-viz/utils": "*",
		"@melt-ui/svelte": "^0.86.0",
		"@tailwindcss/typography": "^0.5.10",
		"chroma-js": "^2.4.2",
		"d3-array": "^3.2.4",
		"d3-format": "^3.1.0",
		"d3-scale": "^4.0.2",
		"d3-shape": "^3.2.0",
		"d3-time-format": "^4.1.0",
		"svelte-virtual-scroll-list": "^1.3.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@ldn-viz/config-eslint": "*",
		"@ldn-viz/config-typescript": "*",
		"@ldn-viz/config-vitest": "*",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/d3-array": "^3.2.1",
		"@types/d3-color": "^3.1.3",
		"@types/d3-format": "^3.0.4",
		"@types/d3-scale": "^4.0.9",
		"@types/d3-shape": "^3.1.7",
		"@types/d3-time-format": "^4.0.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"svelte": "^5.33.0",
		"svelte-check": "^4.1.7",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.5.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^0.1.0"
	},
	"peerDependencies": {
		"svelte": "^5.33.0"
	}
}
