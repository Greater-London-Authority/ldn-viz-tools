{
	"name": "@ldn-viz/docs",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"build-storybook": "storybook build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"format": "prettier --config ../../.prettierrc.js --ignore-path ../../.prettierignore --write .",
		"lint": "prettier --config ../../.prettierrc.js --ignore-path ../../.prettierignore  --check . && eslint .",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview",
		"storybook": "storybook dev -p 6006",
		"test": "npm run test-storybook",
		"test:e2e": "playwright test",
		"test:unit": "vitest run",
		"test-storybook": "vitest --project=storybook"
	},
	"overrides": {
		"storybook": "$storybook"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@ldn-viz/config-eslint": "*",
		"@ldn-viz/config-typescript": "*",
		"@ldn-viz/config-vitest": "*",
		"@ldn-viz/themes": "*",
		"@playwright/test": "^1.49.1",
		"@storybook/addon-a11y": "^10.1.11",
		"@storybook/addon-docs": "^10.1.11",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-themes": "^10.1.11",
		"@storybook/addon-vitest": "^10.1.11",
		"@storybook/svelte": "^10.1.11",
		"@storybook/sveltekit": "^10.1.11",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.49.3",
		"@sveltejs/vite-plugin-svelte": "^6.2.2",
		"@types/node": "^22",
		"@vitest/browser": "^4.0.16",
		"@vitest/coverage-v8": "^4.0.16",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"playwright": "^1.57.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"storybook": "^10.1.11",
		"svelte": "^5.33.0",
		"svelte-check": "^4.1.7",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.2.2",
		"vitest": "^4.0.16",
		"vitest-browser-svelte": "^2.0.1"
	}
}
