{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".svelte-kit/**", "dist/**", "docs/**", "styles/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"sync-docstrings": {
			"dependsOn": ["^sync-docstrings"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["transit", "@ldn-viz/config-vitest#build"],
			"outputs": ["coverage.json"]
		},
		"transit": {
			"dependsOn": ["^transit"]
		}
	}
}
